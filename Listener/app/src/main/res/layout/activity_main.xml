<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#2E2A2A"
    android:padding="40dp">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pmedium"
        android:text="Ingresa tu nombre"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:hint="Nombre propio"
        android:textColor="@color/white"
        android:fontFamily="@font/pmedium"
        android:textColorHint="#8DFFFFFF"
        android:layout_marginVertical="8dp"
        />
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa tu apellido"
        android:textSize="14sp"
        android:layout_marginVertical="8dp"
        android:fontFamily="@font/pmedium"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/edt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:hint="Apellido materno y paterno"
        android:fontFamily="@font/pmedium"
        android:textColorHint="#8DFFFFFF"
        android:textColor="@color/white"
        android:layout_marginVertical="8dp"
        />


    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa tu edad"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pmedium"
        android:layout_marginVertical="8dp"
        />


    <EditText
        android:id="@+id/edt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pmedium"
        android:minHeight="48dp"
        android:textColorHint="#8DFFFFFF"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginVertical="8dp"
        />
    
    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feha de registro"
        android:textSize="14sp"
        android:layout_marginVertical="8dp"
        android:fontFamily="@font/pmedium"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/edt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/pmedium"
        android:textColorHint="#8DFFFFFF"
        android:textColor="@color/white"
        android:layout_marginVertical="8dp"/>


    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textSize="14sp"
        android:layout_marginVertical="8dp"
        android:textColor="@color/white"
        android:fontFamily="@font/lol"

        />

    <EditText
        android:id="@+id/edt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:minHeight="48dp"
        android:textColorHint="#8DFFFFFF"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginVertical="8dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_="10dp"
        android:fontFamily="@font/lol"
        android:shadowColor="#000000"
        android:text="Ingresar"
        android:textSize="20sp"
        app:backgroundTint="#535C8C"
        android:layout_marginVertical="8dp"/>

    <TextView
        android:id="@+id/txt6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:layout_marginVertical="8dp"
        android:fontFamily="@font/pmedium"
        android:textColor="@color/black"
        />


</LinearLayout>